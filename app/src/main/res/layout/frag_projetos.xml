                        android:drawableStart="@drawable/ic_star_grey600_18dp"
                        android:drawablePadding="8dp"
                        android:text="@string/p2_star"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/fork2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:drawableLeft="@drawable/ic_source_fork_grey600_18dp"
                        android:drawableStart="@drawable/ic_source_fork_grey600_18dp"
                        android:drawablePadding="8dp"
                        android:gravity="right|top|end"
                        android:text="@string/p2_fork"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


